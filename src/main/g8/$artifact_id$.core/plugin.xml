<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="$artifact_id$.core"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="applicationCSS"
               value="platform:/plugin/$artifact_id$.core/css/default.css">
         </property>
         <property
               name="clearPersistedState"
               value="true">
         </property>
         <property
               name="appName"
               value="$artifact_id$.core">
         </property>
      </product>
   </extension>

</plugin>
